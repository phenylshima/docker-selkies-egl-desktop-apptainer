BootStrap: localimage
From: images/docker-nvidia-egl-desktop-nvidia.sif

%files
  ../entrypoint.sh /etc/entrypoint.sh
  ../selkies-gstreamer-entrypoint.sh /etc/selkies-gstreamer-entrypoint.sh
  ../kasmvnc-entrypoint.sh /etc/kasmvnc-entrypoint.sh
  ../supervisord.conf /etc/supervisord.conf
  ../nginx.conf /etc/nginx/sites-available/default

%post
  mkdir -p /var/lib/nginx/
  chmod -R 777 /var/lib/nginx/

  mkdir -p /opt/plasma-bypass/bin
  mv /usr/bin/plasmashell /opt/plasma-bypass/bin/plasmashell
  sed -i 's|Exec=/usr/bin/plasmashell|Exec=/opt/plasma-bypass/bin/plasmashell|' /usr/share/applications/org.kde.plasmashell.desktop
  sed -i 's|Exec=/usr/bin/plasmashell|Exec=/opt/plasma-bypass/bin/plasmashell|' /etc/xdg/autostart/org.kde.plasmashell.desktop
